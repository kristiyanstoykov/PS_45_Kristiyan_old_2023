<UserControl x:Class="UI.View.Components.AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.View.Components"
             xmlns:converter="clr-namespace:UI.Extras"
             xmlns:rolesEnum="clr-namespace:Welcome.Others;assembly=Welcome"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="UserRolesEnum" MethodName="GetValues" ObjectType="{x:Type rolesEnum:UserRolesEnum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="rolesEnum:UserRolesEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <StackPanel Margin="10">
            <Label>Full Name:</Label>
            <TextBox x:Name="NameBox" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,10"/>

            <Label>Password:</Label>
            <!--<PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>-->
            <TextBox x:Name="PasswordBox" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,10"/>

            <Label>Email:</Label>
            <TextBox x:Name="EmailBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,10"/>

            <Label>Faculty Number:</Label>
            <TextBox x:Name="FacultyNumberBox" Text="{Binding FacultyNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,0,10"/>

            <Label>Role:</Label>
            <ComboBox x:Name="RoleBox" ItemsSource="{Binding Source={StaticResource UserRolesEnum}}"
                      SelectedValue="{Binding Role, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      Margin="0,0,0,10" SelectedIndex="0" />

            <Button Content="Add User" Command="{Binding AddUserCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
